{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des réalisateurs</h1>

    <table>
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for realisateur in realisateurs %}
            <tr>
                <td><a href="{{ path('realisateur_show', { 'id': realisateur.id }) }}">{{ realisateur.prenom }}</a></td>
                <td>{{ realisateur.nom }}</td>
                <td>{{ realisateur.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('realisateur_show', { 'id': realisateur.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('realisateur_edit', { 'id': realisateur.id }) }}">Éditer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('realisateur_new') }}">Créer un nouveau réalisateur</a>
        </li>
    </ul>
{% endblock %}
