{% extends 'base.html.twig' %}

{% block body %}
    <h1>Film</h1>

    <table>
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ film.titre }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ film.synopsis }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{% if film.duree %}{{ film.duree|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de sortie</th>
                <td>{% if film.dateSortie %}{{ film.dateSortie|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('film_index') }}">Revenir à la liste</a>
        </li>
        <li>
            <a href="{{ path('film_edit', { 'id': film.id }) }}">Éditer</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
