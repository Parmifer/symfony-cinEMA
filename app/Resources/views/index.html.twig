{% extends "::base.html.twig" %}

{% block title %}Cinéma - Accueil{% endblock %}

{% block body %}
<h1>Accueil</h1>
<p>Bonjour et bienvenue !</p>
<p>Voici les films les plus récents :</p>
<table>
        <thead>
            <tr>
                <th>Titre</th>
                <th>Synopsis</th>
                <th>Durée</th>
                <th>Date de sortie</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <td><a href="{{ path('film_show', { 'id': film.id }) }}">{{ film.titre }}</a></td>
                <td>{{ film.synopsis }}</td>
                <td>{% if film.duree %}{{ film.duree|date('H:i:s') }}{% endif %}</td>
                <td>{% if film.dateSortie %}{{ film.dateSortie|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ film.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('film_show', { 'id': film.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('film_edit', { 'id': film.id }) }}">Éditer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
