{% extends 'base.html.twig' %}

{% block body %}
    <h1>Acteur</h1>

    <table>
        <tbody>
            <tr>
                <th>Prénom</th>
                <td>{{ acteur.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ acteur.nom }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ acteur.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('acteur_index') }}">Revenir à la liste</a>
        </li>
        <li>
            <a href="{{ path('acteur_edit', { 'id': acteur.id }) }}">Éditer</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
