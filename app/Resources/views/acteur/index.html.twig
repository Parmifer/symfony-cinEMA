{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des acteurs</h1>

    <table>
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for acteur in acteurs %}
            <tr>
                <td><a href="{{ path('acteur_show', { 'id': acteur.id }) }}">{{ acteur.prenom }}</a></td>
                <td>{{ acteur.nom }}</td>
                <td>{{ acteur.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('acteur_show', { 'id': acteur.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('acteur_edit', { 'id': acteur.id }) }}">Éditer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('acteur_new') }}">Créer un nouvel acteur</a>
        </li>
    </ul>
{% endblock %}
